# stellarized_light fish shell theme by haystackandroid (https://github.com/haystackandroid/stellarized)

# normal text
set fish_color_host              4a5067
set fish_color_normal            4a5067
set fish_pager_color_completion  4a5067
set fish_pager_color_description 4a5067

# muted text
set fish_color_autosuggestion    666c85
set fish_color_comment           666c85

# reverse muted
set fish_pager_color_progress    fceee0 --background=#666c85

# underlined text
set fish_color_valid_path        --underline

# highlit text
set fish_color_match             --background=#bead9d
set fish_color_search_match      --background=#bead9d
set fish_color_selection         --background=#bead9d

# red errors/warnings
set fish_color_cancel            c6394c
set fish_color_cwd_root          c6394c
set fish_color_error             c6394c

# gold special elements
set fish_color_redirection       8b6800
set fish_color_escape            8b6800
set fish_color_operator          8b6800
set fish_color_end               8b6800

# green commands/status
set fish_color_command           007f25
set fish_color_cwd               007f25
set fish_color_user              007f25

# cyan parameters
set fish_color_param             007989

# blue quoted strings
set fish_color_quote             006dcc

# magenta pager name match
set fish_pager_color_prefix      a348ae

